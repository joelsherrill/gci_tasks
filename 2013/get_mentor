#! /bin/sh

if [ $# -ne 1 ] ; then
  echo "usage: $0 number"
  exit 1
fi

Number=$1

isNumber()
{
  if [ $Number -ne 0 -o $Number -eq 0 2>/dev/null ]; then
    return 0
  fi
  return 1
}

status=`isNumber ${Number}`
if [ $? -ne 0 ] ; then
  echo "${Number} is NOT a number"
  exit 1
fi

## CHANGE ME WHEN LIST CHANGES
NumMentors=3
remainder=`expr ${Number} % ${NumMentors}`
case ${remainder} in
  0) mentor=joel_sherrill ;;
  1) mentor=jenniferaverettoarcorp ;;
  2) mentor=chrisjohns ;;
#  3) mentor=sebhub ;;
#  4) mentor=hiddenpearls ;;
#  5) mentor=amartakhar ;;
#  6) mentor=cdcs ;;
#  7) mentor=gedare ;;
#  8) mentor=oarmark ;;
  *) echo "What?" ; exit 1 ;;
esac
echo ${mentor}
exit 0
